{% extends 'base.html.twig' %}

{% block title %}Hello AuthController!{% endblock %}

{% block body %}
<div class="wrapper fadeInDown">
  <div id="formContent">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_sign_in') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" class="fadeIn second" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" class="fadeIn second" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">login</button>
        <div id="formFooter">
          <a class="underlineHover" href="/register">Sign up?</a>
        </div>
    </form>
  </div>
</div>
{% endblock %}
